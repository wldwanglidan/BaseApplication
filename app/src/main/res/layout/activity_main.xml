<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.lily.baseframeapplication.ui.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/fragment_container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <LinearLayout
            android:id="@+id/main_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/bg_btn_main_bottom">

            <Button
                android:id="@+id/btn_home"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackground"
                android:scaleType="matrix"
                android:drawableTop="@drawable/fx_tab_home_bg"
                android:onClick="onTabClicked"
                android:drawablePadding="6dp"
                android:paddingTop="9dp"
                android:paddingBottom="3dp"
                android:text="T钱包"
                android:textColor="@color/textGreenColor"
                android:textSize="@dimen/bitty_text"/>

            <Button
                android:id="@+id/btn_financial"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackground"
                android:drawableTop="@drawable/fx_tab_financial_bg"
                android:onClick="onTabClicked"
                android:scaleType="matrix"
                android:drawablePadding="6dp"
                android:paddingTop="9dp"
                android:paddingBottom="3dp"
                android:text="理财"
                android:textColor="@color/textGreenColor"
                android:textSize="@dimen/bitty_text"/>

            <Button
                android:id="@+id/btn_me"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackground"
                android:drawableTop="@drawable/fx_tab_me_bg"
                android:onClick="onTabClicked"
                android:scaleType="matrix"
                android:drawablePadding="6dp"
                android:paddingTop="9dp"
                android:paddingBottom="3dp"
                android:text="我"
                android:textColor="@color/textGreenColor"
                android:textSize="@dimen/bitty_text"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
